<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Add a Course</h1>

      <%= form_for Course.new, role: 'form' do |f| %>
        <div class='form-group'>
          <%= f.label :title %></td>
          <%= f.text_field :title, class: 'form-control' %></td>
        </div>
        <div class='form-group'>
          <%= f.label :code, 'Course Code' %>
          <%= f.text_field :code, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :instructor %></td>
          <%= f.text_field :instructor, class: 'form-control' %></td>
        </div>
        <div class='form-group'>
          <%= f.label :location %></td>
          <%= f.text_field :location, class: 'form-control' %></td>
        </div>
        <div class='form-group'>
          <%= f.label :section %>
          <%= f.text_field :section, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :credits, 'Credits (number)' %>
          <%= f.text_field :credits, {class: 'form-control', type: 'number'} %>
        </div>
        <%= f.submit 'Add Course', :class => 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>  