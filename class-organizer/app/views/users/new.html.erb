<div class"container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>Sign Up for Free!</h1>

      <%= form_for User.new, role: 'form' do |f| %>
        <div class="form-group">
          <%= f.label :email %></td>
          <%= f.text_field :email, class: 'form-control' %></td>
        </div>
        <div class="form-group">
          <%= f.label :password %></td>
          <%= f.password_field :password, class: 'form-control' %></td>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm Password' %></td>
          <%= f.password_field :password_confirmation, class: 'form-control' %></td>
        </div>
        <%= f.submit 'Create Account', :class => 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
</div>  